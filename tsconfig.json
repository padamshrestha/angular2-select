{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "es2015", "dom"],
        "mapRoot": "/",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "outDir": "dist/",
        "sourceMap": true,
        "target": "es5",
        "stripInternal": true,
        "baseUrl": "",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@angular/baumi": ["dist/@baumi/angular2-select"]
        },
        "types": ["hammerjs"]
    },
    "angularCompilerOptions": {
        "genDir": "dist",
        "skipTemplateCodegen": true,
        "debug": true
    }
}