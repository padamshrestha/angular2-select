{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "es2015", "dom"],
        "mapRoot": "",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "outDir": "../dist",
        "rootDir": ".",
        "sourceMap": true,
        "target": "es5",
        "inlineSources": true,
        "stripInternal": true,
        "typeRoots": ["../node_modules/@types"],
        "types": [
          "hammerjs"
        ]
    },
    "angularCompilerOptions": {
        "genDir": "../dist",
        "skipTemplateCodegen": true,
        "debug": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}